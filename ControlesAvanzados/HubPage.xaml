<Page
    x:Class="ControlesAvanzados.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlesAvanzados"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Hub Header="Colores">

            <HubSection Width="320" Header="Rojo">
                <DataTemplate>
                    <Rectangle Fill="Red" Width="300" Height="500"/>
                </DataTemplate>
            </HubSection>

            <HubSection Width="640" Header="Azul">
                <DataTemplate>
                    <Rectangle Fill="Blue" Width="620" Height="500"/>
                </DataTemplate>
            </HubSection>

            <HubSection Width="320" Header="Amarillo">
                <DataTemplate>
                    <Rectangle Fill="Yellow" Width="300" Height="500"/>
                </DataTemplate>
            </HubSection>

        </Hub>
        
    </Grid>
</Page>
